<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/next"
        motion:constraintSetStart="@id/start"
        android:id="@+id/forward"
        motion:duration="1000">
        <OnSwipe motion:dragDirection="dragDown" />
        <KeyFrameSet>
            <KeyPosition
                motion:motionTarget="@+id/textView5"
                motion:framePosition="40"
                motion:keyPositionType="deltaRelative"
                motion:percentX="0.032"
                motion:percentY="-34.107" />
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/previous"
        motion:constraintSetStart="@id/start"
        android:id="@+id/backward"
        motion:duration="1000">
        <OnSwipe motion:dragDirection="dragUp" />
        <KeyFrameSet>
            <KeyPosition
                motion:motionTarget="@+id/textView4"
                motion:framePosition="40"
                motion:keyPositionType="deltaRelative"
                motion:percentX="0.032"
                motion:percentY="-34.107" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/previous">
        <Constraint
            android:id="@+id/textView0"
            android:elevation="2dp"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:rotation="-45"
            android:alpha="1"
            motion:layout_constraintCircle="@+id/center"
            motion:layout_constraintCircleRadius="160dp"
            motion:layout_constraintCircleAngle="315" />
